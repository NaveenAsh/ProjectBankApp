@page
@model ProjectBankApp.Pages.Customers.ListModel
@{
}

<form method="post">
    <div class="row form-group">
        <div class="col-sm-10"><h2>Customer Details</h2></div>
  
        <div class="col-sm">
            <a href="/Customers/Add" class="btn btn-success rounded-pill" role="button">
                <i class="fa-solid fa-plus"></i> Add
            </a>
        </div>
    </div>
    <div>
  
            <input type="text" asp-for="@Model.SearchText" style="width:1000px;border-radius: 50px" />

            <button type="submit" class="btn btn-success" asp-page-handler="Search">
                <i class="fa fa-search"></i>
            </button>

            <button type="submit" class="btn btn-success" asp-page-handler="Clear">
                <i class="fa fa-xmark"></i>
            </button>
        </div>
        <div>
        <h6 class="text-success">@Model.SuccessMessage </h6>
        <h6 class="text-danger">@Model.ErrorMessage </h6>
        </div>

        <table class="table" style="background-color:aqua">
            <thead>
                <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Middle Name</th>
                <th>Last Name</th>
                <th>DOB</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Pincode</th>
                <th>Mobile Number</th>
                <th>Occupation</th>
                 <th> Actions</th>
                 </tr>
            </thead>

            <tbody>
                <tr>
                    @foreach (var g in @Model.CustomerList)
                    {
                    <tr>
                        <td>@g.Id</td>
                        <td>@g.FirstName</td>
                        <td>@g.MiddleName</td>
                        <td>@g.LastName</td>
                        <td>@g.DOB</td>
                        <td>@g.Address</td>
                        <td>@g.City</td>
                        <td>@g.State</td>
                        <td>@g.Pincode</td>
                        <td>@g.MobileNumber</td>
                        <td>@g.Occupation</td>
                        <td>

                            <a href="/Customers/Edit/@g.Id" class="btn btn-outline-warning" role="button">
                                <i class="fa fa-pen-to-square"></i>
                            </a>
                           @* <a href="/Customers/Delete/@g.Id" class="btn btn-outline-danger" role="button">
                                <i class="fa fa-trash-can"></i>*@
                        </td>
                    </tr>
                    }

            </tbody>

        </table>
</form>
