@page
@model ProjectBankApp.Pages.Transactions.SendMoneyModel
@{
}

<h3>Send Money</h3>

<form method="post" class="col g-3">
    <div class = "form-group col">
        <div class="form-group row">
            <label asp-for="@Model.MyAccount"></label>
            <input asp-for="@Model.MyAccount" class="form-control" readonly />
        </div>
         <div class="form-group row">
            <label asp-for="@Model.ReceiverName"></label>
            <input asp-for="@Model.ReceiverName" class="form-control"  />
        </div>
        <div class="form-group row">
            <label asp-for="@Model.ReceiverAccNo"></label>
            <input asp-for="@Model.ReceiverAccNo" class="form-control"  />
        </div>
         <div class="form-group row">
            <label asp-for="@Model.ReceiverIFSC"></label>
            <input asp-for="@Model.ReceiverIFSC" class="form-control"  />
        </div>
       
         <div class="form-group row">
            <label asp-for="@Model.Amount"></label>
            <input asp-for="@Model.Amount" class="form-control" />
        </div>
      @*  <div class="form-group row">
            <label asp-for="@Model.DOT"></label>
            <input asp-for="@Model.DOT" class="form-control" readonly />
        </div>*@
    </div>
    <br />
  
        <div>
            <button type="submit" class="btn btn-success">Send</button>
            <a href="/Index" class="btn btn-light" role="button">Cancel</a>
        </div>

         <div class="form-group">
            <h6 class="text-success">@Model.SuccessMessage</h6>
            <h6 class="text-danger">@Model.ErrorMessage</h6>
            <h6 class="text-danger">@Html.ValidationSummary()</h6>

        </div>
</form>